{
  "name": "@xdadda/mini",
  "version": "0.2.14",
  "description": "lightweight declarative reactive JS framework based on signals, tagged template literals and components",
  "type": "module",
  "main": "src/index.js",
  "sideEffects": false,
  "scripts": {
    "build": "vite build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xdadda/minijs.git"
  },
  "keywords": [
    "reactive",
    "UI",
    "js",
    "javascript",
    "signals",
    "literals"
  ],
  "author": "xdadda",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/xdadda/minijs/issues"
  },
  "homepage": "https://github.com/xdadda/minijs#readme",
  "exports": {
    ".": {
      "import": "./dist/mini.js",
      "require": "./dist/mini.cjs"
    },
    "./store": {
      "import": "./dist/store.js",
      "require": "./dist/store.cjs"
    },
    "./router": {
      "import": "./dist/router.js",
      "require": "./dist/router.cjs"
    },
    "./components": {
      "import": "./dist/components.js",
      "require": "./dist/components.cjs"
    },
    "./components.css": "./dist/mini.css",
    "./dev": "./src/index.js",
    "./dev/store": "./src/store/index.js",
    "./dev/router": "./src/router/index.js",
    "./dev/components": "./src/components/index.js",
    "./dev/components.css": "./src/components/alerts.css"
  },
  "devDependencies": {
    "rollup-plugin-minify-template-literals": "^1.1.7",
    "vite": "^6.2.6"
  }
}
